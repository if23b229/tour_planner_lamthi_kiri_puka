<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="tour_planner_lamthi_kiri_puka.controller.TourLogsTabController">
    <children>
        <TableView fx:id="logsTableView" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="commentColumn" text="Comment" />
                <TableColumn fx:id="difficultyColumn" text="Difficulty" />
                <TableColumn fx:id="totalDistanceColumn" text="Total Distance" />
                <TableColumn fx:id="totalTimeColumn" text="Total Time" />
                <TableColumn fx:id="ratingColumn" text="Rating" />
            </columns>
        </TableView>
        <Button text="Add Log" layoutX="10" layoutY="420" onAction="#handleAddLog"/>
        <Button text="Edit Log" layoutX="80" layoutY="420" onAction="#handleEditLog"/>
        <Button text="Delete Log" layoutX="150" layoutY="420" onAction="#handleDeleteLog"/>
    </children>
</AnchorPane>
